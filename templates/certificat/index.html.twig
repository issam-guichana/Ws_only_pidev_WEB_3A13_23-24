    <script>
    document.addEventListener("DOMContentLoaded", function () {
        // Use the data fetched from Twig to populate the Chart.js chart
        var data = {
            labels: {{ certificateData.labels | json_encode | raw }},
            datasets: [{
                label: "Certificats",
                fill: true,
                backgroundColor: "rgba(215, 227, 244, 0.5)",
                borderColor: "rgba(215, 227, 244, 1)",
                data: {{ certificateData.data | json_encode | raw }}
            }]
        };

        // Chart configuration options
        var options = {
            maintainAspectRatio: false,
            legend: {
                display: false
            },
            scales: {
                xAxes: [{
                    gridLines: {
                        display: false
                    }
                }],
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                    gridLines: {
                        display: false
                    }
                }]
            }
        };

        // Create the chart
        var ctx = document.getElementById("certificatsChart").getContext("2d");
        var certificatsChart = new Chart(ctx, {
            type: 'line',
            data: data,
            options: options
        });
    });
</script>

