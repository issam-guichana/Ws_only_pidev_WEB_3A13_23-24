									id="changePasswordForm" method="POST" action="{{ path('app_change_password', {'id': user.idUser}) }}" novalidate>
									<!-- Champ Ancien Mot de Passe -->
									<div class="mb-4 input-group">
										<input type="password" class="form-control" placeholder="Ancien Mot de Passe" id="old-password" name="old-password" required>
										{% if errorMessages is defined and errorMessages['old-password'] is defined %}
											<div class="error-message" role="alert">
												{{ errorMessages['old-password'] }}
											</div>
										{% endif %}
									</div>

									<!-- Champ Nouveau Mot de Passe -->
									<div class="mb-4 input-group">
										<input type="password" class="form-control" placeholder="Nouveau Mot de Passe" id="new-password" name="new-password" required>
										{% if errorMessages is defined and errorMessages['new-password'] is defined %}
											<div class="error-message" role="alert">
												{{ errorMessages['new-password'] }}
											</div>
										{% endif %}
									</div>

									<!-- Champ Répéter Nouveau Mot de Passe -->
									<div class="mb-4 input-group">
										<input type="password" class="form-control" placeholder="Répéter Nouveau Mot de Passe" id="confirm-new-password" name="confirm-new-password" required>
										{% if errorMessages is defined and errorMessages['confirm-new-password'] is defined %}
											<div class="error-message" role="alert">
												{{ errorMessages['confirm-new-password'] }}
											</div>
										{% endif %}
									</div>

									<!-- Bouton de Soumission -->
									<button type="submit" class="btn btn-primary btn-block mb-4">
										Valider
									</button>
								</form>
								<!-- Fin du Formulaire de Changement de Mot de Passe -->
