{% extends 'admin.html.twig' %}

{% block content %}
	<h1>Détails de la catégorie</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Identifiant</th>
				<td>{{ categorie.idCat }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ categorie.nomCat }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Retour à la liste des catégories</a>

	<a href="{{ path('app_list_formations') }}" class="btn btn-primary">Voir la liste des formations</a>

	<a href="{{ path('app_categorie_edit', {'idCat': categorie.idCat}) }}" class="btn btn-warning">Éditer</a>

	{{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
