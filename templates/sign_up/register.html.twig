{% extends 'base2.html.twig' %}
{% block header %}{% endblock %}
{% block sidebar %}{% endblock %}
{% block footer %}{% endblock %}
{% block body %}

	<div class="container">

		<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

						<div class="d-flex justify-content-center py-4">
							<a href="" class="logo d-flex align-items-center w-auto">
								<img src="Uploads\logo-formini-final.png" alt="">
								{# <span class="d-none d-lg-block">Formini.tn</span> #}
							</a>
						</div>
						<!-- End Logo -->

						<div class="card mb-3">

							<div class="card-body">

								<div class="pt-4 pb-2">
									<h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
									<p class="text-center small">Enter your personal details to create account</p>
								</div>


								{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
								<div class="col-12">
									<label for="yourName" class="form-label">Your Name</label>

									<div class="invalid-feedback">Please, enter your name!</div>
									{{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}

								</div>

								<div class="col-12">
									<label for="yourEmail" class="form-label">Your Email</label>
									{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter a valid Email adddress!</div>
								</div>
                                <div class="col-12">
									<label for="Votre Age" class="form-label">Votre Age</label>
									{{ form_widget(form.age,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter a valid age</div>
								</div>
                                <div class="col-12">
									<label for="Votre Genre" class="form-label">Votre Genre</label>
									{{ form_widget(form.gender,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter a valid Gendre</div>
								</div>
                                <div class="col-12">
									<label for="Votre Role" class="form-label">Votre Role</label>
									{{ form_widget(form.role,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter a valid role</div>
								</div>

								<div class="col-12">
									<label for="yourPassword" class="form-label">Password</label>
									{{ form_widget(form.mdp.first,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter your password!</div>
								</div>

								<div class="col-12">
									<label for="yourPassword" class="form-label">Confirm Password</label>
									{{ form_widget(form.mdp.second,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please confirm your password!</div>
								</div>
                                <div class="col-12">
									<label for="Votre Photo" class="form-label">Votre Photo de Profil</label>
									{{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}
									<div class="invalid-feedback">Please enter your photo</div>
								</div>
                                    <br>
								<div class="col-12">
									<div class="form-check">
										<input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required="">
										<label class="form-check-label" for="acceptTerms">I agree and accept the
											<a href="#">terms and conditions</a>
										</label>
										<div class="invalid-feedback">You must agree before submitting.</div>
									</div>
								</div>
                                <br>
								<div class="col-12">
									<button class="btn btn-primary w-100" type="submit">Create Account</button>
								</div>
                                <br>
								<div class="col-12">
									<p class="small mb-0">Already have an account?
										<a href="{{ path('app_login') }}">Log in</a>
									</p>
								</div>
								{{ form_end(form) }}

							</div>
						</div>
					</div>
				</div>
			</div>

		</section>

	</div>

{% endblock %}
