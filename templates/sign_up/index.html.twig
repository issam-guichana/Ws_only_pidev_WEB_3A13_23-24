{% extends 'index.html.twig' %}

{% block body1 %}
	<form method="post" enctype="multipart/form-data">
		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_label(form.username, 'Nom du user') }}
			{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.email, 'Email') }}
			{{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.mdp, 'Mot de passe') }}
			{{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.age, 'Age') }}
			{{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.role, 'Role') }}
			{{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.gender, 'Gender') }}
			{{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_label(form.image, 'SÃ©lectionner une image') }}
			{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="d-grid gap-2 mt-3">
			<button type="submit" class="btn btn-primary">Ajouter</button>
		</div>
		{% if form_errors(form) %}
			<div class="alert alert-danger">
				{{ form_errors(form) }}
			</div>
		{% endif %}

		{{ form_end(form) }}
	</form>

{% endblock %}
