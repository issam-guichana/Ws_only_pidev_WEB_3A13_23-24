          <div class="card-img-container" style="height: 200px; overflow: hidden;">
            <img class="card-img-top" src="{{ asset(quiz.image) }}" alt="{{ quiz.nomQuiz }}" style="object-fit: cover; height: 100%; width: 100%;">
          </div>
          <div class="card-body">
            <h5 class="card-title">{{ quiz.nomQuiz }}</h5>
            <p>Durée: 30mins</p>
            <a href="{{ path('app_questions', { 'id': quiz.idQuiz }) }}" class="btn btn-primary">Commencer Quiz</a>
          </div>
        </div>
      </div>
