<script >
  // Get the input field and add an event listener for changes
  document.getElementById("searchInput").addEventListener("input", function() {
    // Get the search term
    var searchTerm = this.value.trim().toLowerCase();

    // Get all the quiz cards
    var quizCards = document.querySelectorAll(".card");

    // Loop through each quiz card
    quizCards.forEach(function(card) {
      // Get the quiz name
      var quizName = card.querySelector(".card-title").textContent.trim().toLowerCase();

      // Check if the search term matches the quiz name
      if (quizName.includes(searchTerm)) {
        // Show the quiz card
        card.style.display = "block";
      } else {
        // Hide the quiz card
        card.style.display = "none";
      }
    });
  });
</script>
