            <input type="date" class="form-control" id="endDate" name="endDate">
          </div>
          <button type="submit" class="btn btn-primary btn-sm">Search</button>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Display All Events -->
  <section class="section">
    <div class="container">
      <div class="row">
        {% if evenements is empty %}
          <div class="col-12">
            <p>No events found.</p>
          </div>
        {% else %}
          {% for event in evenements %}
            <!-- event -->
            <div class="col-lg-4 col-sm-6 mb-5">
              <div class="card border-0 rounded-0 hover-shadow">
                <div class="card-img position-relative">
                  <img class="card-img-top rounded-0" src="{{ asset('uploads/' ~ event.imageEvent) }}" alt="event thumb">
                  <div class="card-date"><span>{{ event.dateEvent|date('d') }}</span><br>{{ event.dateEvent|date('F') }}</div>
                </div>
                <div class="card-body">
                  <!-- location -->
                  <p><i class="ti-location-pin text-primary mr-2"></i>{{ event.lieu }}</p>
                  <a href="{{ path('app_es', {'idEvent': event.idEvent}) }}">
                    <h4 class="card-title">{{ event.nomEvent }}</h4>
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </section>

  


