<!-- Search Form -->
<section class="search-section" style="margin-top: 20px;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 d-flex align-items-center">
        <form action="{{ path('app_search') }}" method="GET" class="w-100 d-flex justify-content-between">
          <div class="form-group mr-3 mb-0">
            <label for="eventName" class="mr-2">Event Name:</label>
