{% extends 'base2.html.twig' %}


{% block header %}{% endblock %}

{% block sidebar %}{% endblock %}

{% block footer %}{% endblock %}
{% block body %}

	<div class="container">
		<section class="section register ">
			{% for message  in app.flashes('message') %}
				<div class="alert alert-info">
					{{ message }}
				</div>
			{% endfor %}
		</section>
		<section class="section register ">
			{% for danger  in app.flashes('danger') %}
				<div class="alert alert-danger">
					{{ danger }}
				</div>
			{% endfor %}
		</section>
		<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

						<div class="d-flex justify-content-center py-4">
							<a href="" class="logo d-flex align-items-center w-auto">
								<img
								src="Uploads\logo-formini-final.png" alt="">
							{# <span class="d-none d-lg-block">Formini.tn</span> #}
							</a>
						</div>
						<!-- End Logo -->

						<div class="card mb-3">

							<div class="card-body">

								<div class="pt-4 pb-2">
									<h5 class="card-title text-center pb-0 fs-4">Mot de passe oublié</h5>
									<p class="text-center small">Enter your personal phone number</p>
								</div>

								<form method="post">
									{{ form_start(phoneNumberForm,{attr:{novalidate:'novalidate'}}) }}
									<div class="col-12">
										{{ form_row(phoneNumberForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse E-mail :'}}) }}
										<div class="invalid-feedback">Please enter a valid Email adddress!</div>
									</div>
                                    <br>
									<div class="col-12">
										{{ form_row(phoneNumberForm.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Votre numéro de téléphone :'}}) }}
										<div class="invalid-feedback">Please enter a valid phone number!</div>
									</div>
									<br>
									<div class="col-12">
										<button class="btn btn-primary w-100" type="submit">Send</button>
									</div>
									{{ form_end(phoneNumberForm) }}
								</form>

							</div>
						</div>
					</div>
				</div>
			</div>

		</section>

	</div>

{% endblock %}