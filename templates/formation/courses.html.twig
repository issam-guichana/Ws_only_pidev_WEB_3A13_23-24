{% extends 'base.html.twig' %}

{% block title %}Formini.tn{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .pagination a {
            color: #333;
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #ddd;
            margin: 0 5px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .pagination a:hover {
            background-color: #f5f5f5;
        }

        .pagination .current {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border: 1px solid #ddd;
            margin: 0 5px;
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <!-- Course list -->
        <h2 class="section-title mb-4">Nos Formations:</h2>
        <div class="row justify-content-center">
            {% for formation in formations %}
            <!-- Course item -->
            <div class="col-lg-4 col-sm-6 mb-5">
                <div class="card p-0 border-primary rounded-0 hover-shadow">
                    <div class="card-body">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <a class="text-color" href="#">{{ formation.cat }}</a>
                            </li>
                        </ul>
                        <h4 class="card-title">{{ formation.nomForm }}</h4>
                        <p class="card-text mb-4">{{ formation.description }}</p>
                        <a href="#" class="btn btn-primary btn-sm" onclick="event.preventDefault(); document.getElementById('inscription-form-{{ formation.idForm }}').submit();">Apply now</a>

                        <form id="inscription-form-{{ formation.idForm }}" action="{{ path('app_user_form_room_inscription', {'idForm': formation.idForm}) }}" method="post" style="display: none;">
                            <input type="hidden" name="idForm" value="{{ formation.idForm }}">
                            {{ csrf_token('app_user_form_room_inscription') }}
                        </form>
                    </div>
                </div>
            </div>
            <!-- /Course item -->
            {% endfor %}
        </div>
        <!-- /Course list -->

        

        <!-- Recommendations -->
        {% if recommendations is not empty %}
        <section class="section">
            <div class="container">
                <h2 class="section-title mb-4">Pour Vous:</h2>
                <div class="row justify-content-center">
                    {% for recommendation in recommendations %}
                    <!-- Recommendation item -->
                    <div class="col-lg-4 col-sm-6 mb-5">
                        <div class="card p-0 border-primary rounded-0 hover-shadow">
                            <div class="card-body">
                                <ul class="list-inline mb-2">
                                    <li class="list-inline-item">
                                        <a class="text-color" href="#">{{ recommendation.cat }}</a>
                                    </li>
                                </ul>
                                <h4 class="card-title">{{ recommendation.nomForm }}</h4>
                                <p class="card-text mb-4">{{ recommendation.description }}</p>
                                <a href="#" class="btn btn-primary btn-sm" onclick="event.preventDefault(); document.getElementById('inscription-form-{{ recommendation.idForm }}').submit();">Apply now</a>

                                <form id="inscription-form-{{ recommendation.idForm }}" action="{{ path('app_user_form_room_inscription', {'idForm': recommendation.idForm}) }}" method="post" style="display: none;">
                                    <input type="hidden" name="idForm" value="{{ recommendation.idForm }}">
                                    {{ csrf_token('app_user_form_room_inscription') }}
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /Recommendation item -->
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- Pagination for main list -->
        <div class="pagination">
            {{ knp_pagination_render(formations) }}
        </div>
        <!-- /Pagination for main list -->
        {% endif %}
        <!-- /Recommendations -->

    </div>
</section>

{% endblock %}
