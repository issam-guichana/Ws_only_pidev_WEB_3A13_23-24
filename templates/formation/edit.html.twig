{% extends 'admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('path/to/font-awesome/css/all.min.css') }}" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
{% endblock %}

{% block content %}
    <div class="page-content custom-page-content">
        <div class="title-container">
            <h2 class="form-title"> <i class="fas fa-lightbulb" style="margin-right: 10px;"></i>Modifier une formation</h2>
        </div>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <br/>
        <div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card custom-card">
            <div class="card-body">
                {{ include('formation/_form.html.twig', {'button_label': 'Mettre à jour', 'button_class': 'btn btn-success'}) }}

            </div>
            <div class="card-footer text-muted">
                <div class="row justify-content-between">
                    <div class="col-md-4">
                        <a href="{{ path('app_list_formations') }}" class="btn btn-secondary btn-block">Retour à la liste</a>
                    </div>
                    <div class="col-md-4">
                        {{ include('formation/_delete_form.html.twig') }}
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary btn-block">Ajouter une catégorie</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<style>

    .custom-page-content {
        font-family: Georgia, serif;
    }
    .custom-page-content body {
        background-color: #f8f9fa;
        color: #212529;
    }
    .custom-page-content .title-container {
        text-align: center;
        margin-bottom: 40px;
    }
    .custom-page-content .form-title {
        font-size: 32px;
        color: #213e60;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    .custom-page-content .form-label {
        font-size: 15px;
        font-weight: bold;
    }
    .custom-page-content .form-input {
        border-color: #d8d1bd;
        border: 2px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
    }
    .custom-page-content .form-group {
        margin-bottom: 20px;
    }
    .custom-page-content .card-container {
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    .custom-page-content .custom-card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .custom-page-content .custom-button {
        background-color: #213e60;
        color: white;
        display: block;
        margin: 0 auto;
        width: 300px;
        text-align: center;
        padding: 10px 20px;
        border-radius: 20px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
        font-weight: bold;
    }
    .custom-page-content .custom-button:hover {
        text-decoration: underline;
        transform: scale(1.05);
        background-color: #2c5282;
    }
    .custom-page-content .card-body {
        flex-grow: 1;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}