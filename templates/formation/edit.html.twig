{% extends 'admin.html.twig' %}

{% block content %}
	<div class="container">
		<h2 class="text-center">Modifier la formation</h2>
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-body">
						{{ include('formation/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
					</div>
					<div class="card-footer text-muted">
						<div class="row justify-content-between">
							<div class="col-md-4">
								<a href="{{ path('app_list_formations') }}" class="btn btn-secondary btn-block">Retour à la liste</a>
							</div>
							<div class="col-md-4">
								{{ include('formation/_delete_form.html.twig') }}
							</div>
							<div class="col-md-4">
								<a href="{{ path('app_categorie_new') }}" class="btn btn-primary btn-block">Ajouter une catégorie</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
