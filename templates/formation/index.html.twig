{% extends 'admin.html.twig' %}

{% block content %}

	<h1>Liste des Formations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Description</th>
				<th>Catégorie</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for formation in formations %}
				<tr>
					<td>{{ formation.nomForm }}</td>
					<td>{{ formation.description }}</td>
					<td>{{ formation.cat.nomCat }}</td>
					<td>
						<a href="{{ path('app_formation_show', {'idForm': formation.idForm}) }}">Voir</a>
						<a href="{{ path('app_formation_edit', {'idForm': formation.idForm}) }}">Éditer</a>
						{{ include('formation/_delete_form.html.twig', {'idForm': formation.idForm}) }}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_formation_new') }}">Créer une nouvelle formation</a>

	<a href="{{ path('app_user_form_room_index') }}">Accéder à l'index des UserFormations</a>

{% endblock %}
